

<div id="referet-widget-container" 
     data-shop="{{ shop.permanent_domain }}" 
     data-product-id="{{ product.id }}"
     data-collection-ids="{% if product %}{{ product.collections | map: 'id' | join: ',' }}{% elsif collection %}{{ collection.id }}{% endif %}"
     data-customer-id="{{ customer.id }}"
     data-logged-in="{% if customer %}true{% else %}false{% endif %}">
  
    <!-- ALWAYS VISIBLE BUTTON (Hidden initially, shown by JS if campaign active) -->
    <button id="referet-btn" 
            style="display: none; background-color: {{ block.settings.button_color }}; color: white; padding: 10px 20px; border: none; cursor: pointer; width: 100%;">
        {{ block.settings.button_text }}
    </button>
      
    {% if customer %}
      <!-- Logged In: Generation Modal -->
      <div id="referet-modal" style="display:none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; overflow: auto; background-color: rgba(0,0,0,0.4);">
          <div style="background-color: #fefefe; margin: 15% auto; padding: 20px; border: 1px solid #888; width: 80%; max-width: 500px; border-radius: 8px; position: relative;">
              <span id="referet-close" style="color: #aaa; float: right; font-size: 28px; font-weight: bold; cursor: pointer;">&times;</span>
              <div style="text-align: center; margin-bottom: 15px;">
                  <img src="{{ 'logo.png' | asset_img_url: 'medium' }}" alt="Refertle Logo" width="50" height="50" style="max-height: 50px; width: auto;">
              </div>
              <h2 id="referet-reward-text" style="font-size: 1.5em; margin-bottom: 20px; text-align: center;">Refer & Earn</h2>
              
              <div id="referet-loading" style="text-align: center; display: none;">
                  <p>Generating your exclusive link...</p>
              </div>
  
              <div id="referet-result" style="display: none; text-align: center;">
                  <p>Here is your referral link:</p>
                    <div style="display: flex; gap: 10px; margin: 10px 0;">
                        <input type="text" id="referet-link" readonly style="flex: 1; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
                        <button id="referet-copy-btn" style="padding: 10px; background-color: #eee; border: 1px solid #ccc; border-radius: 4px; cursor: pointer;">Copy</button>
                        <button id="referet-whatsapp-btn" style="padding: 10px; background-color: #25D366; color: white; border: none; border-radius: 4px; cursor: pointer; display: flex; align-items: center; justify-content: center;">
                            <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor" style="margin-right: 5px;">
                                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                            </svg>
                            Share
                        </button>
                    </div>
              </div>
              
              <p id="referet-error" style="color: red; display: none; margin-top: 10px; text-align: center;"></p>
          </div>
      </div>
     {% else %}
       <!-- Guest: Login Modal -->
       <div id="referet-guest-modal" style="display:none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; overflow: auto; background-color: rgba(0,0,0,0.4);">
           <div style="background-color: #fefefe; margin: 15% auto; padding: 20px; border: 1px solid #888; width: 80%; max-width: 400px; border-radius: 8px; position: relative; text-align: center;">
              <span id="referet-guest-close" style="color: #aaa; float: right; font-size: 28px; font-weight: bold; cursor: pointer;">&times;</span>
              <div style="text-align: center; margin-bottom: 15px;">
                   <img src="{{ 'logo.png' | asset_img_url: 'medium' }}" alt="Refertle Logo" width="50" height="50" style="max-height: 50px; width: auto;">
              </div>
              <h2>Join the Program</h2>
              <p style="margin: 20px 0;">Login to create your referral link and earn rewards.</p>
              <a href="{{ routes.account_login_url }}?return_to={{ request.path }}" style="background-color: {{ block.settings.button_color }}; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; display: inline-block;">Login Now</a>
           </div>
       </div>
     {% endif %}
  </div>

{% schema %}
{
  "name": "Referral Widget",
  "target": "section",
  "stylesheet": "referral-widget.css",
  "javascript": "referral-widget.js",
  "settings": [
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#000000"
    },
    {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Refer & Earn"
    }
  ]
}
{% endschema %}
